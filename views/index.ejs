<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tree Shop</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="header-gradient text-white text-center py-4">
        <h1 class="display-4 fw-bold">Tree Shop <i class="fas fa-seedling"></i></h1>
        <nav class="mt-2">
            <a href="/" class="text-white mx-3 nav-link-custom">Trang chủ</a>
        </nav>
    </header>

    <div class="container mt-5">
        <!-- Form thêm cây -->
        <div class="card shadow-lg p-4 mb-5 form-card">
            <h2 class="text-center text-success mb-4">Thêm cây mới</h2>
            <form action="/add" method="POST">
                <div class="mb-3">
                    <input type="text" class="form-control form-control-lg" name="treename" placeholder="Tên cây" required>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="description" placeholder="Mô tả" rows="3" required></textarea>
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="image" placeholder="URL hình ảnh">
                </div>
                <button type="submit" class="btn btn-success btn-lg w-100">Thêm cây</button>
            </form>
        </div>

        <!-- Danh sách cây -->
        <h2 class="text-center text-success mb-4">Danh sách cây</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-success">
                    <tr>
                        <th>#</th>
                        <th>Tên cây</th>
                        <th>Mô tả</th>
                        <th>Hình ảnh</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% trees.forEach((tree, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= tree.treename %></td>
                            <td><%= tree.description %></td>
                            <td>
                                <img src="<%= tree.image %>" alt="<%= tree.treename %>" class="img-fluid rounded" width="80" onerror="this.src='https://via.placeholder.com/80';">
                            </td>
                            <td>
                                <a href="/update/<%= tree._id %>" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> Cập nhật</a>
                                <form action="/delete/<%= tree._id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa cây này không?')"><i class="fas fa-trash"></i> Xóa</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Nút Reset -->
        <form action="/reset" method="POST" class="text-center mt-4">
            <button type="submit" class="btn btn-outline-danger btn-lg"><i class="fas fa-sync-alt"></i> Reset Dữ Liệu</button>
        </form>
    </div>

    <!-- Footer -->
    <footer class="footer-gradient text-white text-center py-4 mt-5">
        <p class="mb-0">© 2025 Tree Shop - Cửa hàng cây cảnh <i class="fas fa-leaf"></i></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>